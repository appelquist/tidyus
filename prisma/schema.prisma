datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

generator client {
    provider = "prisma-client-js"
}

model Chore {
    id             String          @id @default(cuid())
    createdAt      DateTime        @default(now())
    title          String          @db.VarChar(100)
    interval       Int
    createdBy      String
    choreCompletes ChoreComplete[]

    @@index([createdBy])
}

model ChoreComplete {
    id                    String                  @id @default(cuid())
    completedAt           DateTime                @default(now())
    choreId               String
    chore                 Chore                   @relation(fields: [choreId], references: [id])
    ChoresCompletedByUser ChoresCompletedByUser[]

    @@index([choreId])
}

model ChoresCompletedByUser {
    id              String        @id @default(cuid())
    userId          String
    choreCompleteId String
    choreComplete   ChoreComplete @relation(fields: [choreCompleteId], references: [id])

    @@index([userId])
    @@index([choreCompleteId])
}
